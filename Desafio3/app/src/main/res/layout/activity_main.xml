<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="ADMINISTRACION DE AUTOMOVILES"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtIdDB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIdDB" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Codigo"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtId" />

    <EditText
        android:id="@+id/txtId"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="@+id/cmbTipo"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/txtIdDB" />

    <Spinner
        android:id="@+id/cmbTipo"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/cmbMarca"
        app:layout_constraintStart_toStartOf="@+id/cmbMarca"
        app:layout_constraintTop_toTopOf="@+id/barrier2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Tipo"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/barrier2" />

    <Spinner
        android:id="@+id/cmbMarca"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtModelo"
        app:layout_constraintStart_toStartOf="@+id/cmbColor"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/cmbColor"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <Spinner
        android:id="@+id/cmbColor"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtModelo"
        app:layout_constraintStart_toStartOf="@+id/txtModelo"
        app:layout_constraintTop_toBottomOf="@+id/cmbMarca" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="Marca"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/cmbMarca"
        app:layout_constraintEnd_toStartOf="@+id/cmbMarca" />

    <EditText
        android:id="@+id/txtVIN"
        android:layout_width="266dp"
        android:layout_height="47dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="53dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/txtChasis"
        app:layout_constraintStart_toStartOf="@+id/txtChasis"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="21dp"
        android:text="VIN"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtChasis"
        android:layout_width="266dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/txtMotor"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Chasis"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtChasis"
        app:layout_constraintEnd_toStartOf="@+id/txtChasis" />

    <EditText
        android:id="@+id/txtModelo"
        android:layout_width="266dp"
        android:layout_height="44dp"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="224dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/txtPrecio"
        app:layout_constraintStart_toStartOf="@+id/txtVIN"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="15dp"
        android:text="Modelo"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/txtModelo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="4dp"
        android:text="Numero de Asientos"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtAsientos"
        app:layout_constraintStart_toStartOf="@+id/txtAsientos" />

    <Button
        android:id="@+id/btnBuscar2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="6dp"
        android:text="Cargar Imagen"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="@+id/txtAnio"
        app:layout_constraintStart_toStartOf="@+id/btnActualizar"
        app:layout_constraintTop_toTopOf="@+id/txtPrecio" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="171dp"
        android:text="AÃ±o"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnEliminar"
        app:layout_constraintStart_toStartOf="@+id/txtDescripcion"
        app:layout_constraintTop_toBottomOf="@+id/txtMotor" />

    <EditText
        android:id="@+id/txtAsientos"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="177dp"
        android:layout_marginBottom="177dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:singleLine="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnBuscar"
        app:layout_constraintEnd_toEndOf="@+id/txtPrecio"
        app:layout_constraintStart_toStartOf="@+id/txtPrecio"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtPrecio"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="114dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/btnEliminar"
        app:layout_constraintEnd_toStartOf="@+id/btnBuscar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtAnio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/txtDescripcion"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/txtAsientos" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:text="Precio"
        app:layout_constraintBottom_toTopOf="@+id/txtPrecio"
        app:layout_constraintStart_toStartOf="@+id/txtAsientos" />

    <EditText
        android:id="@+id/txtMotor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="19dp"
        android:ems="10"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txtChasis" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Motor"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6" />

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginStart="41dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="41dp"
        android:ems="10"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Descripcion"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/txtPrecio"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecio" />

    <TextView
        android:id="@+id/txtIdDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAgregar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAgregar" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="95dp"
        android:layout_height="0dp"
        android:layout_marginEnd="111dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="2dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="3dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnActualizar"
        app:layout_constraintTop_toTopOf="@+id/btnActualizar" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnActualizar"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/btnActualizar" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="cmbTipo,txtChasis,txtVIN,cmbColor,txtMotor,cmbMarca,txtModelo" />


</androidx.constraintlayout.widget.ConstraintLayout>