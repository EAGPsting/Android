<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity"
    tools:menu="@menu/menu">

    <Button
        android:id="@+id/btnMarcas"
        android:layout_width="395dp"
        android:layout_height="38dp"
        android:layout_marginTop="59dp"
        android:text="Marcas"
        app:layout_constraintStart_toStartOf="@+id/btnAutomovil"
        app:layout_constraintTop_toBottomOf="@+id/btnAutomovil" />

    <Button
        android:id="@+id/btnAutomovil"
        android:layout_width="395dp"
        android:layout_height="38dp"
        android:layout_marginTop="118dp"
        android:text="Automoviles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTipo"
        android:layout_width="395dp"
        android:layout_height="38dp"
        android:layout_marginTop="19dp"
        android:text="Tipos"
        app:layout_constraintStart_toStartOf="@+id/btnMarcas"
        app:layout_constraintTop_toBottomOf="@+id/btnMarcas" />

    <Button
        android:id="@+id/btnColor"
        android:layout_width="395dp"
        android:layout_height="38dp"
        android:layout_marginTop="22dp"
        android:text="Colores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTipo" />
</androidx.constraintlayout.widget.ConstraintLayout>